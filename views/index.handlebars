<h1>Burgers!</h1>

<h2 id="not-devoured">Non-eaten Burgers!</h2>

<ul>
  {{#each burger}}
    {{#unless devoured}}
    <h5>{{this.burger_name}}</h5>
    <button class="devour" data-id="{{this.id}}">Devour!</button>
    {{/unless}}
  {{/each}}
</ul>

<h2 id="devoured">Eaten Burgers!</h2>

<ul>
  {{#each burger}}
    {{#if devoured}}
      <h5>{{this.burger_name}}</h5>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burger">Burger Name:</label>
    <input type="text" id="burg-name" name="name">
  </div>

  <div class="form-group">
    <label for="devoured">Devoured?</label><br>
    <input type="radio" name="devoured" value="0" checked>Not Devoured!<br>
    <input type="radio" name="devoured" value="1">Devoured!
  </div>

  <button type="submit" id="add-burger">Add Burger</button>
</form>
